<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rajkishandevraj.busstopschedules">

    <!-- uses-permission is require to maintain security, depending on the sensitivity the system
     may automatically grant permission or ask the user to approve-->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BusStopScheduleTheme">
        <activity android:name=".ListOfBusStopsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BusStopActivity"
            android:label="@string/blank"
            android:theme="@style/BusStopScheduleTheme">
        </activity>
    </application>

</manifest>