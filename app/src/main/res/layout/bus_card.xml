<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="16dp"
        android:id="@+id/bus_arrival_bus_number"
        android:text="@string/bus_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="16dp"
        android:id="@+id/bus_arrival_destination"
        android:text="@string/bus_card_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:id="@+id/bus_arrival_arrival_time"
        android:text="@string/bus_card_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>